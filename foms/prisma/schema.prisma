datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  SHIPPER
  DRIVER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  shipments Shipment[]
}

model Shipment {
  id          String   @id @default(cuid())
  reference   String
  origin      String
  destination String
  createdAt   DateTime @default(now())

  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
}
